<script>

    //FILTER FOR SEARCH BY
    document.getElementById('status-filter').addEventListener('keyup', debound(filter_table, 500))
    // document.getElementById('minDate').addEventListener('keyup', debound(filter_table, 500))
    // document.getElementById('maxDate').addEventListener('keyup', debound(filter_table, 500))

    function filter_table(e) {
        const rows = document.querySelectorAll('tbody tr')
        rows.forEach(row => {
            row.style.display = (row.innerText.includes(e.target.value)) ? '' : 'none'
        })
    }

    function debound(func, timeout) {
        let timer
        return (...args) => {
            if (!timer) {
                func.apply(this, args);
            }
            clearTimeout(timer)
            timer = setTimeout(() => {
                func.apply(this, args)
                timer = undefined
            }, timeout)
        }
    }


    //FILTER FOR DATE RANGE
    $(document).ready(function () {
        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                var min = $('#start_date').datepicker('getDate');
                var max = $('#end_date').datepicker('getDate');
                var startDate = new Date(data[4]);
                if (min == null && max == null) return true;
                if (min == null && startDate <= max) return true;
                if (max == null && startDate >= min) return true;
                if (startDate <= max && startDate >= min) return true;
                return false;
            }
        );

        $('#start_date').datepicker({ onSelect: function () { table.draw(); }, changeMonth: true, changeYear: true });
        $('#end_date').datepicker({ onSelect: function () { table.draw(); }, changeMonth: true, changeYear: true });
        var table = $('#employee_table').DataTable();

        // Event listener to the two range filtering inputs to redraw on input
        $('#start_date, #end_date').change(function () {
            table.draw();
        });
    });


</script>